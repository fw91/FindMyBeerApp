<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MenuActivity"
    android:background="@drawable/app_background">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/logo_findmybeer"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleView"
        android:layout_marginTop="30dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:layout_below="@id/titleView"
        android:background="#ffffff"
        android:layout_marginTop="20dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/titleView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp">
        <FrameLayout
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/border_titlescreen">
            <ImageButton
                android:id="@+id/beerMe_btn"
                android:src="@drawable/icon_beerme_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"/>
        </FrameLayout>
        <FrameLayout
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/border_titlescreen">
            <ImageButton
                android:id="@+id/submit_btn"
                android:src="@drawable/icon_submit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"/>
        </FrameLayout>
        <FrameLayout
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/border_titlescreen">
            <ImageButton
                android:id="@+id/favorites_btn"
                android:src="@drawable/icon_favorites_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"/>
        </FrameLayout>
        <FrameLayout
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/border_titlescreen">
            <ImageButton
                android:id="@+id/profile_btn"
                android:src="@drawable/icon_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"/>
        </FrameLayout>
    </GridLayout>

    <View
        android:id="@+id/bannerView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/user_status_banner" />

    <TextView
        android:id="@+id/menuStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Flo BeerMe (BierkÃ¶nig)"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"/>
</RelativeLayout>
